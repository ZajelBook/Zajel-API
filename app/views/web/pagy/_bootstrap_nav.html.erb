<%#
  This template is i18n-ready: if you don't use i18n, then you can replace the pagy_t
  calls with the actual strings ("&lsaquo; Prev", "Next &rsaquo;", "&hellip;").

  The link variable is set to a proc that returns the link tag.
  Usage: link.call( page_number [, text [, extra_attributes_string ]])
-%>
<% link = pagy_link_proc(pagy, link_extra: 'class="page-number"') -%>
<%#                            -%>  <ul class="pagination-list">
  <% if pagy.prev                -%>    <li><%== link.call(pagy.prev, '<i class="las la-angle-left"></i>') %></li>
  <% else                        -%>    <li><span class="page-number"><i class="las la-angle-left"></i></span></li>
  <% end                         -%>
  <% pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] -%>
    <%   if    item.is_a?(Integer) -%>    <li class="page-item"><%== link.call(item) %></li>
    <%   elsif item.is_a?(String)  -%>    <li><span class="page-number current"><%= item %></span></li>
    <%   end                       -%>
  <% end                         -%>
  <% if pagy.next                -%>    <li><%== link.call(pagy.next, '<i class="las la-angle-right"></i>') %></li>
  <% else                        -%>    <li><span class="page-number"><i class="las la-angle-right"></i></span></li>
  <% end                         -%>
<%#                            -%>  </ul>
