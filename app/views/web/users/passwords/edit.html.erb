<div class="loginArea section-padding2">
  <div class="container">
    <div class="row">
      <div class="col-xl-5 col-lg-5 p-0 loginLeft-img">
        <div class="loginLeft-img">
          <div class="login-cap">
            <h3 class="tittle">Borrow & Lend books</h3>
            <p class="pera">secondary text goes here.</p>
          </div>
          <div class="login-img">
            <img src="assets/img/gallery/login.png" alt="img" class="loginImg">
          </div>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'col-xl-7 col-lg-7 login-Wrapper' }) do |f| %>
        <%= render "web/users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="row">
          <div class="col-md-12">
            <label class="infoTitle">Password</label>
            <div class="input-form">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", id: 'inputPassword', required: true, class: 'form-control', minlength: 8 %>
              <div class="icon"><i class="las la-lock icon"></i></div>
            </div>
          </div>

          <div class="col-md-12">
            <label class="infoTitle">Password Confirmation</label>
            <div class="input-form">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: 'form-control', minlength: 8 %>
              <div class="icon"><i class="las la-lock icon"></i></div>
            </div>
          </div>

          <div class="col-sm-12">
            <div class="btn-wrapper text-center">
              <%= f.submit 'Change my password', class: 'cmn-btn4 w-100 mb-60' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
